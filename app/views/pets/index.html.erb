<div class="container">
<% if current_user.is_admin? %>
<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>History</th>
      <th>Sex</th>
      <th>Size</th>
      <th>Breed</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.history %></td>
        <td><%= pet.sex %></td>
        <td><%= pet.size %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.user.email %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
<% else %>
  <div class="alert alert-danger" role="alert">
    No tienes permiso para ver esta seccion
  </div>
<% end %>
</div>
