<p id="notice"><%= notice %></p>

<h1>Question Pets</h1>

<table>
  <thead>
    <tr>
      <th>Pet</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_pets.each do |question_pet| %>
      <tr>
        <td><%= question_pet.pet.name %></td>
        <td><%= question_pet.question.text %></td>
        <td><%= link_to 'Show', question_pet %></td>
        <td><%= link_to 'Edit', edit_question_pet_path(question_pet) %></td>
        <td><%= link_to 'Destroy', question_pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question Pet', new_question_pet_path %>
