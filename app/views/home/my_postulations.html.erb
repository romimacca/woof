
<div class="container">
    <h1>Mis postulaciones</h1>

<% if @postulation_pets.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Pet</th>
        <th>User</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @postulation_pets.each do |postulation_pet| %>
        <tr>
          <td><%= link_to postulation_pet.pet.name, postulation_pet.pet  %></td>
          <td><%= postulation_pet.user.username %></td>
          <td><%= postulation_pet.state %></td>
          <td><%= link_to 'Show', postulation_pet %></td>
          <td><%= link_to 'Edit', edit_postulation_pet_path(postulation_pet) %></td>
          <td><%= link_to 'Destroy', postulation_pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
      <div class="alert alert-warning" role="alert">
        No has postulado para adoptar
    </div>
  
  <% end %>
  

</div>