

<div class="col-sm-4 col-md-3 my-2 ">
    <div class="card">

        <% if pet.photos.count > 1 %>
            <%= carousel_for(pet.photos) %> 
        <% else %>
            <%= image_tag (pet.photos.first),  class: "card-img-top rounded-lg" %>
        <% end %>
    
        
        <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <p class="card-text"> <%= pet.user.username %></p>
             <p class="card-text"> <%= pet.age %></p>
            <p class="card-text"> <%= pet.created_at.strftime("%d/%m/%Y") %></p>
